 % === Required Packages ===
\RequirePackage{mathtools}


% === COMMANDS ===

%  \tab[width] -- tab a line by by a certain amount
% width[0.5cm] -- the distance to tab the line by
%
% \tab Hello World, this is a short tab
% \tab[1cm] Hello World, this is a longer tab
%
\newcommand\tab[1][0.5cm]{\hspace*{#1}}

%  \textul{content} -- a more semantic definition of underline
% content -- the content to underline
%
% \textul{Hello World}
%
\newcommand\textul[1]{\underline{#1}}

%  \figref{figlabel} -- a quick way to reference a figure
% figlable -- the label of t he figure to reference
%
% \figref{my_figure_label}
% Contributed by Brendan Moriarty
\newcommand{\figref}[1] {Figure \ref{#1} [\pageref{#1}]}

%   \ceil{content} -- wraps math ceiling notation around content
% content -- the content to wrap
%
% \ceil{n/2}
%
\DeclarePairedDelimiter\ceil{\lceil}{\rceil}

%   floor{content} -- wraps math floor notation around content
% content -- the content to wrap
%
% \floor{n/2}
%
\DeclarePairedDelimiter\floor{\lfloor}{\rfloor}
